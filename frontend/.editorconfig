# 顶级配置文件
root = true

# 所有文件默认规则
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
quote_type = single

# Markdown 和 JSON 保留原样（避免格式化错误）
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.json]
indent_style = space
indent_size = 2
quote_type = double

# Makefile 使用 tab 缩进（特殊情况）
[Makefile]
indent_style = tab
